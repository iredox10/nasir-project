<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %> 
<body>
    <%- include('./partials/nav.ejs') %> 
</body>
    <div class="container">
        <h1 class="heading">staffs records</h1>
        <div class= mt-5">
            <% staffs.forEach(staff=>{ %>
                <table>
                    <tr>
                        <th class="bg-green-900 border-r-2 text-white p-2">first name</th>
                        <th class="bg-green-900 border-r-2 text-white p-2">last name</th>
                        <th class="bg-green-900 border-r-2 text-white p-2">surname</th>
                        <th class="bg-green-900 border-r-2 text-white p-2">staff id</th>
                        <th class="bg-green-900 border-r-2 text-white p-2">department</th>
                        <th class="bg-green-900 border-r-2 text-white p-2">password</th>
                    </tr>
                    <tr class="bg-gray-400 text-white p-2">
                        <td class="p-2 border-r-2">
                            <%= staff.firstName %>
                        </td>
                        <td class="p-2 border-r-2">
                            <%= staff.lastName %>
                        </td>
                        <td class="p-2 border-r-2">
                            <%= staff.surName%>
                        </td>
                        <td class="p-2 border-r-2">
                            <%= staff.staffId%>
                        </td class="p-2 border-r-2">
                        <td class="p-2 border-r-2">
                            <%= staff.department%>
                        </td>
                        <td class="p-2 border-r-2"><%= staff.password %> </td>
                    </tr>
                </table>
                <%}) %>
        </div>
    </div>
</html>